<div class="container pb-2">
    <h2 class="text-center">
     Shopping List
    </h2>

    <div class="d-flex flex-row ">
       <div class="flex-grow-1">
           The amount of food items to buy: <%= @ingredients.length %>
       </div>
       <div class="flex-grow-1">
           The total value of food needed: $<%= @total_price %>
       </div>
    </div>
</div>

  <div class="container">
    <table class="table table-bordered table-striped" >
      <thead>
        <tr class="text-center">
          <th>Food</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody class="text-center">
        <% @ingredients.each do |food, ingredients| %>
        <tr>
          <td><%= food %></td>
          <td>
              <% total_quantity = ingredients.map(&:quantity).sum %>
              <span><%= total_quantity %> <%= ingredients.first.food.measurement_unit %></span>
          </td>
          <td>
              <% total_price = ingredients.map { |ingredient| ingredient.quantity * ingredient.food.price }.sum %>
              $<%= total_price %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>