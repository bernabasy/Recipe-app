<section class="container">
  <h3 class="fw-semibold">Your list of foods</h3>
  <div class="d-flex justify-content-end p-4">
    <a href="<%=request.path%>/new">
      <button class="btn btn-sm btn-primary">Add Food</button>
    </a>
  </div>
  <table class="table table-sm table-bordered">
    <thead class="bg-light">
      <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement Unit</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Qty</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
      <% @all_foods.each do |food| %>
        <tr>
          <td> <%= food.name %></td>
          <td> <%= food.measurement_unit %></td>
          <td> $<%= food.price %> </td>
          <td> <%= food.quantity %> </td>
          <td><%= button_to "Delete", food_path(food), method: :delete, data: {confirm: "Are you sure you want to delete this post?"}, class: "btn btn-sm btn-danger"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
