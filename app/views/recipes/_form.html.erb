  <%= form.text_field :preparation_time, class: "form-control", placeholder: "Preparation time" %>
</div>


<div class="field form-group  p-2">
  <%= form.text_field :cooking_time, class: "form-control", placeholder: "Cooking time" %>
</div>


<div class="field form-group  p-2">
  <%= form.text_field :description, class: "form-control", placeholder: "Description" %>
</div>

<div class="field form-group  p-2">
  <%= form.check_box :public %>
  <%= form.label :public, style: "display: inline" %>
</div>

<div class="field form-group  p-2">
<%= form.number_field :user_id, id: :recipe_user_id, class: "form-control", value: current_user.id, type: :hidden %>
