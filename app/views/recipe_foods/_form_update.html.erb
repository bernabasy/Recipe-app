<%= form_with model: recipe_food, url: recipe_recipe_food_path(@recipe) do |form| %>

  <% if recipe_food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe_food.errors.count, "error") %> prohibited this recipe_food from being saved:</h2>

      <ul>
        <% recipe_food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity, class: "form-control"%>
  </div>
  
  <div>
    <%= form.label :food_id, style: "display: block" %>
      <%= form.select :food_id, @user_foods.try(:map) { |food| ["#{food.name} (#{food.measurement_unit}) $#{food.price}", food.id ] }, {}, class: "form-control"%>
  </div>

  <div>
    <%= form.submit  "Save changes", class: "btn btn-primary text-light mt-4" %>
  </div>
<% end %>